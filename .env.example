# ============================================================================
# E-COMMERCE REAL-TIME PLATFORM - Environment Variables
# ============================================================================
# Copier ce fichier en .env et remplacer les valeurs selon votre environnement
# Ne JAMAIS committer le fichier .env dans Git (sensible)

# ============================================================================
# KAFKA CONFIGURATION
# ============================================================================
KAFKA_BROKERS=localhost:9092
KAFKA_SCHEMA_REGISTRY_URL=http://localhost:8081

# ============================================================================
# PRODUCER CONFIGURATION
# ============================================================================
# Taille du batch pour envoyer les événements
PRODUCER_BATCH_SIZE=100

# Nombre de tentatives en cas d'échec
PRODUCER_RETRIES=3

# Vitesse de génération des événements (1.0 = normal, 10.0 = 10x plus rapide)
PRODUCER_SPEED=1.0

# ============================================================================
# CONSUMER CONFIGURATION
# ============================================================================
# Groupe de consommateurs Kafka
CONSUMER_GROUP_ID=ecommerce-consumer-group

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
# Niveau de log: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================================================
# DATA GENERATION
# ============================================================================
# Seed pour la génération aléatoire (reproductibilité)
FAKER_SEED=42

# Nombre maximum de lignes à charger depuis le dataset Retail Rocket
DATASET_MAX_ROWS=100000

# ============================================================================
# REDIS CONFIGURATION (Pour Sprints futurs)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================================================
# DATABASE CONFIGURATION (Pour Sprints futurs)
# ============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/ecommerce
DATABASE_POOL_SIZE=10

# ============================================================================
# MONITORING CONFIGURATION
# ============================================================================
METRICS_ENABLED=true
METRICS_PORT=9090

# ============================================================================
# FRAUD DETECTION (Pour Sprint 4)
# ============================================================================
# Seuil de score de fraude (0.0 à 1.0)
FRAUD_THRESHOLD=0.85

# ============================================================================
# ENVIRONMENT
# ============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# Mode debug
DEBUG=false
